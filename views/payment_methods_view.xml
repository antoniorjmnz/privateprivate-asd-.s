
<odoo>

    <record id="upocubo_metodos_pago_view_tree" model="ir.ui.view">
        <field name="name">upocubo.metodos_pago.list</field>
        <field name="model">upocubo.metodos_pago</field>
        <field name="arch" type="xml">
            <list string="Métodos de Pago">
                <field name="name"/> 
                <field name="user_id"/>
                <field name="tipo_metodo"/>
                <field name="detalles"/> 
            </list>
        </field>
    </record>

    <record id="upocubo_metodos_pago_view_form" model="ir.ui.view">
        <field name="name">upocubo.metodos_pago.form</field>
        <field name="model">upocubo.metodos_pago</field>
        <field name="arch" type="xml">
            <form string="Método de Pago">
                <sheet>
                    <group>
                        <group string="Detalles del Método">
                            <field name="name"/>
                            <field name="tipo_metodo"/>
                        </group>
                        <group string="Propietario">
                            <field name="user_id"/> 
                            <field name="detalles"/> 
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="upocubo_metodos_pago_action" model="ir.actions.act_window">
        <field name="name">Métodos de Pago</field>
        <field name="res_model">upocubo.metodos_pago</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer método de pago
            </p>
        </field>
    </record>

    <menuitem 
        name="Métodos de Pago" 
        id="upocubo_metodos_pago_submenu"
        parent="upocubo_users_menu"
        groups="upocubo.group_upocubo_manager"
        action="upocubo_metodos_pago_action"/>

</odoo>